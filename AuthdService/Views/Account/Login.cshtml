
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model AuthdService.Views.Account.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";   
    ViewData["Title"] = "Login Page";
}
<h2>Login</h2>    
<hr />    
<div class="row">
    <div class="cold-md-4">
        <form method="post">
            <h4>Create new account</h4>
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="NickName"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="RememberLogin"></label>
                <input type="checkbox" checked="checked" asp-for="RememberLogin" class="form-control"/>
                <span asp-for="ConfirmPassword" class="text-danger"></span>

            </div>
            <input type="submit" id="Submit"/>
        </form>
    </div>
</div>    