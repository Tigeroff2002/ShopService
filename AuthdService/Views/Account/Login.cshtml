@page
@model AuthdService.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";  
}
<h2>Login</h2>    
<hr />    
<div class="row">    
    <div class="col-md-4">    
        <form asp-action="Login">    
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            @if (!string.IsNullOrEmpty(ViewBag.Message))    
            {    
                <span class="text-danger">    
                    @ViewBag.Message    
                </span>    
            }    
            @Html.HiddenFor(x => x.ReturnUrl)    
            <div class="form-group">    
                <label asp-for="NickName" class="control-label"> @Html.DisplayNameFor(model => model.NickName)</label>    
                <input asp-for="NickName" class="form-control" />    
                <span asp-validation-for="NickName" class="text-danger"></span>    
            </div>    
            <div class="form-group"> 
                <label asp-for="Password" class="control-label"> @Html.DisplayNameFor(model => model.Password)</label>    
                <input asp-for="Password" class="form-control" />    
                <span asp-validation-for="Password" class="text-danger"></span>    
            </div>    
            <div class="form-group">    
                <div class="checkbox">
                    <label>
                        @Html.DisplayNameFor(model => model.RememberLogin)
                        <br />
                        <input type="checkbox" asp-for="RememberLogin" checked="checked"/>Остаться<br /> 
                    </label>
                </div>    
            </div>    
            <div>    
                <input type="button" value="Войти" onclick="location.href='@Url.Action("postlogin", "account")'" />  
            </div>    
        </form>    
    </div>    
</div>     